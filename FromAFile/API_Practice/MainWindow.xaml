<Window x:Class="API_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:API_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Choose a color" HorizontalAlignment="Left" Margin="102,114,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboColor" HorizontalAlignment="Left" Margin="102,161,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboColor_SelectionChanged"/>
        <ListBox x:Name="lstCarInfo" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="315,10,0,96"/>
        <Label x:Name="RecordCount" Content="Record Count:" HorizontalAlignment="Left" Margin="320,374,0,0" VerticalAlignment="Top" Width="178"/>

    </Grid>
</Window>
